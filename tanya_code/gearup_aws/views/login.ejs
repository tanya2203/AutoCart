<!-- TO PUT SHOW ICON OF EYE INSIDE THE TEXT FILED -->
<style>
form i {
	margin-left: -30px; /* 350px for right corner */
	cursor: pointer;
}
</style>

<!-- CDN FOR SWEET ALERT  -->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<title>LOGIN FORM</title>
</head>
<body
	background="https://wallpaper-mania.com/wp-content/uploads/2018/09/High_resolution_wallpaper_background_ID_77701702379.jpg">

	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
			<!-- Form Design start -->

			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

				<form action="/webUser/login" method="post"
					style="background-color: rgba(240, 241, 240, 0.3); border: 2px solid black; border-radius: 10px; margin-top: 40px; padding-left: 50px; padding-right: 50px; padding-bottom: 30px">

					<div class="form-group">
						<br>
						<h2 style="text-align: center;">
							<b>LOGIN HERE!</b>
						</h2>
						<br> <label><strong>Mobile :</strong></label> <br>
						<input type="text" name="mobileNo"
							placeholder="Enter Mobile " required> <br>
						<br> <label><strong>Password:</strong></label> <br> <input
							type="password" name="password" placeholder=" type password"
							id="password">
						<!-- IF WE USE FORM CONTROL IT SHOW EYE OUTSIDE THE TEXT FIELD
                        <input class="form-control" type="password" name="password"  placeholder="type password" id="password">
                          -->
						<i class="bi bi-eye-slash" id="togglePassword"></i> <br> <br>
						<button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>

						<hr
							style="height: 3px; border-width: 0; color: black; background-color: black;">
						<!-- <a href="forgetpassword.html"><b>Forget Password /</b></a> &nbsp; -->
						<a href="/register"><b>SignUp</b></a> &nbsp;

					</div>
				</form>

			</div>

			<!-- Form Design End -->
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 "></div>
		</div>
	</div>

</body>
</html> 
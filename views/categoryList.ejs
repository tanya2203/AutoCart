<%- include('header.ejs')%>

	<div id="carouselExampleIndicators" class="carousel slide"
		data-ride="carousel">
		<ol class="carousel-indicators">
			<li data-target="#carouselExampleIndicators" data-slide-to="0"
				class="active"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		</ol>

		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-100"
					src="https://assets.intleflorist.com/site/0081A/Homepage/FloristsChoice-Banner.jpg"
					alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100"
					src="https://assets.intleflorist.com/site/0081A/Homepage/Birthday-Banner2.jpg"
					alt="Second slide">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100"
					src="https://assets.intleflorist.com/site/0081A/Homepage/eflora-carousel-1400x560-FLORISTS-CHOICE-LIGHT.jpg"
					alt="Third slide">
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleIndicators"
			role="button" data-slide="prev"> <span
			class="carousel-control-prev-icon" aria-hidden="true"></span> <span
			class="sr-only">Previous</span>
		</a> <a class="carousel-control-next" href="#carouselExampleIndicators"
			role="button" data-slide="next"> <span
			class="carousel-control-next-icon" aria-hidden="true"></span> <span
			class="sr-only">Next</span>
		</a>
	</div>
	
	<!-- PRODUCT SECTION = START -->

	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="section-title">
						<h3>
							<span class="orange-text">Our</span> Products
						</h3>
						<br>
						<h6>Bring it to be a part of happiness of your love OnesWe
							give quality fragnant flowers and bookey to our customers. Our
							retail premises opened in 2018 in Nagpur city.</h6>
					</div>
				</div>
			</div>
			<% if(data.length != 0) { %>
			
			<div class="row">
				<% for (let datas of data) { %>
				<div class="col-lg-3 col-md-6 text-center">
					<div class="single-product-item">
						<div class="product-image">
							<img style="height: 200px;" src="<%= datas.categoryImage[0].path%>"
								alt=""></a>
						</div>
						<h3><%= datas.categoryName%></h3>
						
						<a href="/webProduct/getProductByCategory/<%= datas._id%>" class="cart-btn"><i
							class="fa-solid fa-magnifying-glass"></i> Explore All</a>
					</div>
				</div>
				<% } %>

			</div>
			
			<% } else { %>
				<h1>No Category Found...</h1>
			<% } %>
		</div>
	</div>
	<!-- PRODUCT SECTION = END -->
	<%- include('footer.ejs')%>